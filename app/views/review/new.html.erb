<%= form_for :review, url: restaurant_review_index_path do |f| %>

  <div class="form-horizontal">
    <div class="row">
      <div class="col-md-10 col-md-offset-2">
        <h1>Add a review for <em><%= @restaurant.name %></em></h1>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :Rating, :class => "col-sm-2 control-label"%><br>
      <div class="col-sm-8">
        <%= f.number_field :rating, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :Comment, :class => "col-sm-2 control-label" %>
      <div class="col-sm-8">
        <%= f.text_area :comment, :class => "form-control", :rows => "5", :placeholder => "Tell me about the restaurant..." %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit :class => "btn btn-success" %>
      </div>
    </div>
  </div>

<% end %>
