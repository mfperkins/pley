<!DOCTYPE html>
<html>
  <head>
    <title>Pley</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "layouts/nav" %>
     <div id="content_container" class="container theme-showcase" role="main">
       <% if user_signed_in? %>
       <div>
         <p>Welcome <%= current_user.email %></p>
       </div>
       <% end %>
       <%= yield %>
    </div>
  </body>
</html>
